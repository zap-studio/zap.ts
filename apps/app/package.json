{
  "name": "@zap/app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack --port 3000",
    "dev:debug": "cross-env NODE_OPTIONS='--inspect' next dev --turbopack --port 3000",
    "dev:scan": "next dev --turbopack --port 3000 & react-scan localhost:3000",
    "dev:trace": "NEXT_TURBOPACK_TRACING=1 next dev --turbopack --port 3000",
    "build": "next build --turbopack",
    "build:analyze": "ANALYZE=true next build",
    "postbuild": "next-sitemap",
    "start": "next start --port 3000",
    "typecheck": "tsc --noEmit",
    "typegen": "next typegen"
  },
  "dependencies": {
    "@next/bundle-analyzer": "^15.5.4",
    "@next/mdx": "^15.5.4",
    "@zap/config": "workspace:*",
    "@zap/security": "workspace:*",
    "@zap/seo": "workspace:*",
    "@zap/shadcn": "workspace:*",
    "lucide-react": "^0.545.0",
    "next": "15.5.4",
    "next-sitemap": "^4.2.3",
    "next-themes": "^0.4.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@zap/typescript-config": "workspace:*",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/node": "^24.7.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "cross-env": "^10.1.0",
    "react-scan": "^0.4.3",
    "tailwindcss": "^4.1.14",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3"
  }
}
