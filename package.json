{
  "name": "@zap/monorepo",
  "version": "0.0.0",
  "devDependencies": {
    "@zap/typescript-config": "workspace:*",
    "@biomejs/biome": "2.2.5",
    "@changesets/cli": "^2.29.7",
    "lefthook": "^1.13.6",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "ultracite": "5.6.2"
  },
  "packageManager": "bun@1.2.23",
  "private": false,
  "scripts": {
    "dev": "turbo run dev --parallel",
    "bootstrap": "bun install",
    "build": "turbo run build",
    "format": "bun x ultracite fix",
    "lint": "bun x biome check .",
    "start": "turbo run start",
    "test": "turbo run test",
    "check-types": "turbo run check-types",
    "typegen": "turbo run typegen"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
