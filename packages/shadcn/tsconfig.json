{
  "extends": "@zap/typescript-config/react-library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["."],
  "exclude": ["node_modules", "dist"],
  "exports": {
    "./lib/*": "./src/lib/*.ts",
    "./components/*": "./src/components/ui/*.tsx",
    "./hooks/*": "./src/hooks/*.ts",
    "./styles/*": "./src/styles/*.css"
  }
}
