{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": ["tsconfig.json", ".env*", "package.json"],
  "globalEnv": [
    "NODE_ENV",
    "SITE_URL",
    "NEXT_PUBLIC_SITE_URL",
    "DATABASE_URL",
    "DATABASE_URL_DEV"
  ],
  "tasks": {
    "dev": {
      "dependsOn": ["dev:db:push"],
      "persistent": true,
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*",
        "!**/*.test.{ts,tsx,js,jsx}",
        "!**/*.spec.{ts,tsx,js,jsx}"
      ],
      "outputs": ["dist/**", ".next/**", "build/**", "!.next/cache/**"],
      "env": ["NODE_ENV", "SITE_URL", "NEXT_PUBLIC_SITE_URL", "ANALYZE"]
    },
    "start": {
      "dependsOn": ["build", "db:push"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["transit", "@zap/vitest-config#build"]
    },
    "transit": {
      "dependsOn": ["^transit"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "e2e": {
      "passThroughEnv": ["PLAYWRIGHT_*"],
      "dependsOn": ["^build"]
    },
    "//#lint": {},
    "//#format": {
      "cache": false
    },
    "topo": {
      "dependsOn": ["^topo"]
    },
    "check-types": {
      "dependsOn": ["^build", "topo"],
      "inputs": ["$TURBO_DEFAULT$", "tsconfig.json"],
      "outputs": ["*.tsbuildinfo"],
      "outputLogs": "new-only"
    },
    "typegen": {
      "cache": false,
      "outputs": [".next/types/**"]
    },
    "clean": {
      "cache": false
    },
    "db:push": {
      "dependsOn": ["db:up"],
      "cache": false
    },
    "dev:db:push": {
      "dependsOn": ["dev:db:up"],
      "cache": false
    },
    "db:up": {
      "cache": false
    },
    "dev:db:up": {
      "cache": false
    }
  }
}
