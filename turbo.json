{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": ["tsconfig.json", ".env*", "package.json"],
  "globalEnv": ["NODE_ENV", "SITE_URL", "NEXT_PUBLIC_SITE_URL"],
  "tasks": {
    "dev": {
      "persistent": true,
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*",
        "!**/*.test.{ts,tsx,js,jsx}",
        "!**/*.spec.{ts,tsx,js,jsx}"
      ],
      "outputs": ["dist/**", ".next/**", "build/**", "!.next/cache/**"],
      "env": ["NODE_ENV", "SITE_URL", "NEXT_PUBLIC_SITE_URL", "ANALYZE"]
    },
    "start": {
      "dependsOn": ["build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["transit", "@zap/vitest-config#build"],
      "outputs": ["coverage.json"]
    },
    "transit": {
      "dependsOn": ["^transit"]
    },
    "merge-json-reports": {
      "inputs": ["coverage/raw/**"],
      "outputs": ["coverage/merged/**"]
    },
    "report": {
      "dependsOn": ["merge-json-reports"],
      "inputs": ["coverage/merge"],
      "outputs": ["coverage/report/**"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "//#lint": {},
    "//#format": {
      "cache": false
    },
    "topo": {
      "dependsOn": ["^topo"]
    },
    "check-types": {
      "dependsOn": ["^build", "topo"],
      "inputs": ["$TURBO_DEFAULT$", "tsconfig.json"],
      "outputs": ["*.tsbuildinfo"],
      "outputLogs": "new-only"
    },
    "typegen": {
      "cache": false,
      "outputs": [".next/types/**"]
    },
    "clean": {
      "cache": false
    }
  }
}
